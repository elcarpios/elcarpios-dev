---
type HeadingTag = "h1" | "h2" | "h3" | "h4" | "h5" | "h6";

type Props = {
  tag?: HeadingTag;
  className?: string;
  mb?: "1" | "2" | "3" | "4";
};

const HEADING_STYLES: { [key in HeadingTag]: string } = {
  h1: "text-4xl font-extrabold tracking-tight md:text-4xl lg:text-5xl xl:text-6xl",
  h2: "text-2xl font-bold tracking-tight md:text-3xl xl:text-4xl",
  h3: "text-lg font-semibold tracking-tight md:text-xl xl:text-2xl",
  h4: "text-md font-semibold tracking-tight md:text-lg xl:text-xl",
  h5: "font-semibold tracking-tight md:text-md xl:text-lg",
  h6: "font-semibold",
};

const { tag: Tag = "h1", className = "", mb = "2" }: Props = Astro.props;
---

<Tag class={`mb-${mb} dark:text-white ${HEADING_STYLES[Tag]} ${className}`}>
  <slot />
</Tag>
