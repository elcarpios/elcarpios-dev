---
export interface Props {
  name: string;
  class?: string;
}

const { name, class: className = "" } = Astro.props as Props;
const { default: innerHTML } = await import(`../assets/svg/${name}.svg?raw`);
---

<span
  class={`flex justify-center items-center w-6 h-6 ${className}`}
  set:html={innerHTML}
/>
