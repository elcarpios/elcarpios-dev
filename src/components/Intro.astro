---
import { Image } from "astro:assets";
import ProfileImage from "@assets/images/profile.jpg";
import Icon from "@components/Icon.astro";
import LinkButton from "@components/LinkButton.astro";
import Heading from "@components/Heading.astro";
import Section from "@components/Section.astro";

export const prerender = true;
---

<Section id="intro" className="bg-gray-50 dark:bg-gray-800">
  <Fragment slot="header">Intro</Fragment>
  <div class="grid gap-8 grid-cols-1 md:grid-cols-12 xl:gap-16">
    <div class="mr-auto w-full place-self-center md:col-span-7">
      <div class="mb-6 md:mb-8">
        <Heading mb="4">Victor Carpio Fern√°ndez</Heading>
        <Heading
          tag="h5"
          className="text-gray-700 dark:text-gray-200 flex gap-1.5 lg:gap-2 flex-wrap ml-1"
        >
          Freelance Fullstack Developer
          <span class="font-extralight">|</span>
          <span class="font-light text-md">Barcelona, Spain</span>
        </Heading>
      </div>
      <div class="max-w-12">
        <p
          class="flex items-center h-12 mb-4 text-md md:mb-6 py-3 px-5 font-medium border border-gray-400 rounded-md dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-400 w-full"
        >
          Websites
        </p>
        <span class="grid grid-cols-1 gap-x-3 gap-y-2 lg:grid-cols-2">
          <LinkButton href="#projects">See some of the projects</LinkButton>
          <LinkButton style="secondary" href="#projects"> Projects </LinkButton>
        </span>
      </div>
    </div>
    <Image
      class="md:col-span-5 m-auto rounded-lg"
      src={ProfileImage}
      alt="Victor Carpio"
    />
  </div>
</Section>
