---
import { Image } from "astro:assets";
import ProfileImage from "@assets/images/profile.jpg";
import Icon from "@components/Icon.astro";
import LinkButton from "@components/LinkButton.astro";
import Heading from "@components/Heading.astro";
import Section from "@components/Section.astro";

export const prerender = true;
---

<Section className="bg-gray-50 dark:bg-gray-700">
  <div class="grid gap-6 md:grid-cols-12 xl:gap-16">
    <div class="mr-auto w-full place-self-center md:col-span-7">
      <div class="mb-6 md:mb-8">
        <Heading mb="4">Victor Carpio Fern√°ndez</Heading>
        <Heading
          tag="h5"
          className="text-gray-700 dark:text-gray-200 flex gap-1.5 lg:gap-2 flex-wrap"
        >
          Freelance Fullstack Developer
          <span class="font-extralight">|</span>
          <span class="font-light text-md">Barcelona, Spain</span>
        </Heading>
      </div>
      <p
        class="mb-4 md:mb-6 px-6 py-4 border border-gray-400 rounded-md dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 md:text-md lg:text-lg"
      >
        I transitioned from customer support to developer.<br />
        I have created and collaborated with teams in developing their platforms.<br
        />
        I am characterized by attention to detail, scalability, and security.<br
        />
        I continue to educate myself to offer the best of myself as a developer.<br
        />
      </p>
      <div class="grid grid-cols-1 gap-x-3 gap-y-2 lg:flex lg:flex-wrap">
        <LinkButton href="#projects">See some of the projects</LinkButton>
        <LinkButton
          style="secondary"
          href="https://www.malt.es/profile/victorcarpio"
        >
          <Icon class="text-malt" name="malt" />
          Malt profile
        </LinkButton>
      </div>
    </div>
    <Image
      class="md:col-span-5 m-auto rounded-lg shadow-md"
      src={ProfileImage}
      alt="Victor Carpio"
    />
  </div>
</Section>
