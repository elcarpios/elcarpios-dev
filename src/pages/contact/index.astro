---
import Default from "@layouts/Default.astro";
import ContactForm from "@components/Form.svelte";

export const prerender = true;
---

<Default title="Victor Carpio | Freelance Fullstack Developer - Contact">
  <section id="contact" class="bg-gray-50 dark:bg-gray-800">
    <div class="py-10 px-6 mx-auto max-w-screen-md sm:py-14 lg:px-8">
      <h2
        class="mb-8 md:mb-12 text-3xl tracking-tight font-bold text-center text-gray-900 dark:text-white"
      >
        Have a question? Just want to say hello?
      </h2>
      <ContactForm client:only="svelte" />
    </div>
  </section>
</Default>
