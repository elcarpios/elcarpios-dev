---
import { Image } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import ProfileImage from "@assets/images/profile.png";
import Projects from "@components/Pages/Projects.astro";
import About from "@components/Pages/About.astro";
import Icon from "@components/Icon.astro";
import Partners from "@components/Partners.astro";
---

<Layout title="elcarpios.dev">
  <section class="px-6 py-8 bg-gray-50 dark:bg-gray-700">
    <div class="grid max-w-screen-xl mx-auto xl:gap-0 sm:grid-cols-12 gap-6">
      <div class="mr-auto w-full place-self-center sm:col-span-7">
        <h1
          class="mb-2 max-w-2xl text-4xl font-extrabold tracking-tight md:text-5xl xl:text-6xl dark:text-white"
        >
          Victor Carpio Fern√°ndez
        </h1>
        <p
          class="font-medium md:text-md lg:text-lg mb-6 text-gray-500 dark:text-gray-400"
        >
          Fullstack Developer Freelance
        </p>
        <p
          class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400"
        >
          Based on Barcelona. <br />
           Engaging user experiences. <br />
           Working towards a better websites.
        </p>
        <a
          href="mailto:hello@elcarpios.dev"
          class="inline-flex gap-2 items-center justify-center px-5 py-3 mr-3 text-base font-medium text-center text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900"
        >
          Start working together
          <Icon class="w-5 h-5" name="arrow-right" />
        </a>
      </div>
      <div
        class="flex align-center md:mt-0 sm:col-span-5 mx-auto rounded-lg overflow-hidden shadow-md"
      >
        <Image src={ProfileImage} alt="random image" />
      </div>
    </div>
  </section>
  <Projects />
  <About />
  <Partners />
</Layout>
